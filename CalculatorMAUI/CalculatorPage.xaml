<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorMAUI.CalculatorPage"
             Title="CalculatorPage">

    <Grid 
        Padding="5.8"
        BackgroundColor="DimGray" 
        ColumnSpacing="1"
        RowSpacing="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            x:Name="result"
            Grid.ColumnSpan="4"
            BackgroundColor="Black"
            FontAttributes="Bold"
            FontSize="28"
            HorizontalTextAlignment="End"
            LineBreakMode="NoWrap"
            Text="0"
            TextColor="White"
            VerticalTextAlignment="Center" />


        <Button
            Grid.Row="3"
            Grid.Column="0"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="7"
            TextColor="DarkGray" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="8"
            TextColor="DarkGray" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="9"
            TextColor="DarkGray" />
        <Button
            Grid.Row="4"
            Grid.Column="0"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="4"
            TextColor="DarkGray" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="5"
            TextColor="DarkGray" />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="6"
            TextColor="DarkGray" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="1"
    TextColor="DarkGray" />
        <Button
            Grid.Row="5"
            Grid.Column="1"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="2"
            TextColor="DarkGray" /> 
        <Button
            Grid.Row="5"
            Grid.Column="2"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="36"
            Text="3"
            TextColor="DarkGray" />


        <Button
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="Black"
            Clicked="OnUnarnyOperator"
            CornerRadius="10"
            FontSize="24"
            Text="sin(x)"
            TextColor="DarkGray" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Black"
            Clicked="OnCE"
            CornerRadius="10"
            FontSize="36"
            Text="CE"
            TextColor="DarkGray" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            BackgroundColor="Black"
            Clicked="OnC"
            CornerRadius="10"
            FontSize="36"
            Text="C"
            TextColor="DarkGray" />


        <Button
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="Black"
            Clicked="OnUnarnyOperator"
            CornerRadius="10"
            FontSize="30"
            Text="1/x"
            TextColor="DarkGray" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="Black"
            Clicked="OnUnarnyOperator"
            CornerRadius="10"
            FontSize="30"
            Text="x²"
            TextColor="DarkGray" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="Black"
            Clicked="OnUnarnyOperator"
            CornerRadius="10"
            FontSize="30"
            Text="√x"
            TextColor="DarkGray" />


        <Button
            Grid.Row="1"
            Grid.Column="3"
            BackgroundColor="Black"
            Clicked="OnBackspace"
            CornerRadius="10"
            FontSize="30"
            Text="⌫"
            TextColor="DarkGray" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            BackgroundColor="Black"
            Clicked="OnBinaryOperator"
            CornerRadius="10"
            FontSize="30"
            Text="÷"
            TextColor="DarkGray" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="Black"
            Clicked="OnBinaryOperator"
            CornerRadius="10"
            FontSize="30"
            Text="×"
            TextColor="DarkGray" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="Black"
            Clicked="OnBinaryOperator"
            CornerRadius="10"
            FontSize="30"
            Text="-"
            TextColor="DarkGray" />
        <Button
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="Black"
            Clicked="OnBinaryOperator"
            CornerRadius="10"
            FontSize="30"
            Text="+"
            TextColor="DarkGray" />
        <Button
            Grid.Row="6"
            Grid.Column="3"
            BackgroundColor="DarkSlateGrey"
            Clicked="OnEqual"
            CornerRadius="10"
            FontSize="30"
            Text="="
            TextColor="DarkGray" />

        <Button
            Grid.Row="6"
            Grid.Column="0"
            BackgroundColor="Black"
            Clicked="OnUnarnyOperator"
            CornerRadius="10"
            FontSize="30"
            Text="±"
            TextColor="DarkGray" />
        <Button
            Grid.Row="6"
            Grid.Column="1"
            BackgroundColor="Black"
            Clicked="OnNumberSelection"
            CornerRadius="10"
            FontSize="30"
            Text="0"
            TextColor="DarkGray" />
        <Button
            Grid.Row="6"
            Grid.Column="2"
            BackgroundColor="Black"
            Clicked="OnDot"
            CornerRadius="10"
            FontSize="30"
            Text="."
            TextColor="DarkGray" />

    </Grid>


</ContentPage>